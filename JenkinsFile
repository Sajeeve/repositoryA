pipeline{
    agent any 
    stages{
        stage('Checkout stage'){
            steps{
                withMaven(maven:'maven-3.6.1'){
                    sh 'mvn clean compile'
                }
            }
        }
         stage('Testing stage'){
            steps{
                withMaven(maven:'maven-3.6.1'){
                    sh 'mvn test'
                }
            }
        }
         stage('Deploy stage'){
            steps{
                withMaven(maven:'maven-3.6.1'){
                    sh 'mvn deploy'
                }
            }
        }
    }
}